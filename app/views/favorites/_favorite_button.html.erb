<% if logged_in? %>
  <% if current_user.favorites?(@micropost) %>
    <%= form_with(model: current_user.favorites.find(micropost_id: micropost.id),local:true,method: :destroy) do |f| %>
      <%= hidden_field_tag :micropost_id, :user_id %>
      <%= f.submit 'unfavorite', class: 'btn btn-success btn-block' %>
    <% end %>
  <% else %>
  <%= form_with(model: current_user.favorites.build,local:true,method: :create) do |f| %>
      <%= hidden_field_tag :micropost_id, :user_id %>
      <%= f.submit 'favorite', class: 'btn btn-success btn-block' %>
    <% end %>
  <% end %>
<% end %>
