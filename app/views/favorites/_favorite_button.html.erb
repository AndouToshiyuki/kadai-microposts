<% if logged_in? %>
  <% if current_user.favorited_micropost?(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id),local:true,method: :destroy) do |f| %>
      <%= hidden_field_tag :micropost_id, :user_id %>
      <%= f.submit 'unfavorite', class: 'btn btn-success btn-block' %>
    <% end %>
  <% else %>
  <%= form_with(model: current_user.favorites.find_or_create_by(micropost_id: micropost.id),local:true,method: :create) do |f| %>
      <%= hidden_field_tag :micropost_id, :user_id %>
      <%= f.submit 'favorite', class: 'btn btn-success btn-block' %>
    <% end %>
  <% end %>
<% end %>
