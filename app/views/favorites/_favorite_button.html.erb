<% if logged_in? %>
  <% if current_user.favorited_micropost?(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id),local:true,method: :delete) do |f| %>
      <%= f.hidden_field :micropost_id, value: micropost.id %>
      <%= f.submit 'unfavorite', class: 'btn btn-success btn-block' %>
    <% end %>
  <% else %>
  <%= form_with(model: current_user.favorites.new, local:true, method: :post) do |f| %>
      <%= f.hidden_field :micropost_id, value: micropost.id %>
      <%= f.submit 'favorite', class: 'btn btn-success btn-block' %>
    <% end %>
  <% end %>
<% end %>
